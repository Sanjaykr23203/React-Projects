{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars":"off",
        "no-unused-expressions":"off",
        "no-undef":"off",
        "semi" : ["warn", "always"],
        "eqeqeq" : "warn",
        "indent":"warn",
        "quotes":["warn","double"],
       "quote-props":"warn",
       "jsx-quotes":"warn",
       "no-console":"warn",
       "max-params": ["error", 3]
    //    "wrap-regex":"error"
  
        // "linebreak-style":["warn"],
    }
}
